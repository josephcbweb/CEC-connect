generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                    Int                 @id @default(autoincrement()) @map("user_id")
  username              String              @unique
  passwordHash          String              @map("password_hash")
  email                 String              @unique
  status                UserStatus          @default(active)
  lastLogin             DateTime?           @map("last_login")
  reset_otp             String?
  otp_expiry            DateTime?
  createdAt             DateTime            @default(now()) @map("created_at")
  updatedAt             DateTime            @updatedAt @map("updated_at")
  advisorDetails        AdvisorDetails?
  auditLogs             AuditLog[]
  advisedClass          Class?              @relation("ClassAdvisor")
  courses               Course[]
  hodDetails            HodDetails?
  approvals             NoDueApproval[]
  receivedNotifications Notification[]      @relation("ReceivedNotifications")
  sentNotifications     Notification[]      @relation("SentNotifications")
  principalDetails      PrincipalDetails?
  assignedDueTypes      ServiceDepartment[] @relation("AssignedDueTypes")
  students              Student[]
  userRoles             UserRole[]
  deviceTokens          DeviceToken[]       @relation("UserDeviceTokens")
  @@map("users")
}

model Role {
  id          Int              @id @default(autoincrement()) @map("role_id")
  name        String           @unique @map("role_name")
  description String?
  permissions RolePermission[]
  userRoles   UserRole[]

  @@map("roles")
}

model Permission {
  id          Int              @id @default(autoincrement()) @map("permission_id")
  name        String           @unique @map("permission_name")
  description String?
  action      String
  moduleName  String           @map("module")
  roles       RolePermission[]

  @@map("permissions")
}

model UserRole {
  userId Int  @map("user_id")
  roleId Int  @map("role_id")
  role   Role @relation(fields: [roleId], references: [id])
  user   User @relation(fields: [userId], references: [id])

  @@id([userId, roleId])
  @@map("user_roles")
}

model RolePermission {
  roleId       Int        @map("role_id")
  permissionId Int        @map("permission_id")
  permission   Permission @relation(fields: [permissionId], references: [id])
  role         Role       @relation(fields: [roleId], references: [id])

  @@id([roleId, permissionId])
  @@map("role_permissions")
}

model Student {
  id                                  Int             @id @default(autoincrement()) @map("student_id")
  deviceTokens                        DeviceToken[]   @relation("StudentDeviceTokens")
  advisorId                           Int?            @map("advisor_id")
  createdAt                           DateTime        @default(now()) @map("created_at")
  updatedAt                           DateTime        @updatedAt @map("updated_at")
  name                                String
  password                            String
  reset_otp                           String?
  otp_expiry                          DateTime?
  dateOfBirth                         DateTime?       @map("date_of_birth")
  email                               String?         @unique
  gender                              Gender
  religion                            String
  nationality                         String          @default("Indian")
  mother_tongue                       String
  blood_group                         String?
  student_phone_number                String          @unique
  permanent_address                   String
  contact_address                     String
  state_of_residence                  String
  aadhaar_number                      String          @unique
  fatherName                          String?
  father_phone_number                 String?
  motherName                          String?
  mother_phone_number                 String?
  parent_email                        String?
  annual_family_income                Decimal?
  guardian_name                       String?
  guardian_relationship               String?
  guardian_email                      String?
  local_guardian_address              String?
  local_guardian_phone_number         String?
  program                             Program
  departmentId                        Int?            @map("department_id")
  preferredDepartmentId               Int?            @map("preferred_department_id")
  status                              StudentStatus   @default(pending)
  admission_number                    String?         @unique
  admission_date                      DateTime?
  admission_type                      AdmissionType   @default(regular)
  category                            String?
  caste                               String?
  allotted_branch                     String
  is_fee_concession_eligible          Boolean         @default(false)
  last_institution                    String
  tc_number                           String?
  tc_date                             DateTime?
  qualifying_exam_name                String
  qualifying_exam_register_no         String
  percentage                          Float?
  previous_degree_cgpa_or_total_marks Float?
  physics_score                       Float?
  chemistry_score                     Float?
  maths_score                         Float?
  keam_subject_total                  Float?
  entrance_type                       String?
  entrance_roll_no                    String?
  entrance_rank                       Int?
  entrance_total_score                Float?
  account_number                      String?
  bank_name                           String?
  ifsc_code                           String?
  bank_branch                         String?
  admitted_category                   String?
  bus_service                         Boolean         @default(false)
  hostel_service                      Boolean         @default(false)
  busId                               Int?            @map("bus_id")
  busStopId                           Int?            @map("bus_stop_id")
  currentSemester                     Int             @default(1) @map("current_semester")
  passout_year                        Int?
  classId                             Int?            @map("class_id")
  hostelId                            Int?            @map("hostel_id")
  contact_pincode                     String?
  permanent_pincode                   String?
  father_occupation                   String?
  mother_occupation                   String?
  tc_issued_by                        String?
  bus_pass_suspended_until            DateTime?
  is_bus_pass_suspended               Boolean         @default(false)
  busRequests                         BusRequest[]
  certificates                        Certificate[]
  feeDetails                          FeeDetails[]
  hostelHistory                       HostelHistory[]
  invoices                            Invoice[]
  requests                            NoDueRequest[]
  users                               User?           @relation(fields: [advisorId], references: [id])
  bus                                 Bus?            @relation(fields: [busId], references: [id])
  busStop                             BusStop?        @relation(fields: [busStopId], references: [id])
  class                               Class?          @relation(fields: [classId], references: [id])
  department                          Department?     @relation("StudentDepartment", fields: [departmentId], references: [id])
  hostel                              Hostel?         @relation(fields: [hostelId], references: [id])
  preferredDepartment                 Department?     @relation("StudentPreferredDepartment", fields: [preferredDepartmentId], references: [id])

  @@map("students")
}

model Department {
  id                  Int               @id @default(autoincrement()) @map("department_id")
  name                String            @map("department_name")
  hodId               Int?              @unique @map("hod_id")
  createdAt           DateTime          @default(now()) @map("created_at")
  updatedAt           DateTime          @updatedAt @map("updated_at")
  department_code     String
  status              DepartmentStatus  @default(ACTIVE)
  program             Program           @default(BTECH)
  batchDepartments    BatchDepartment[]
  courses             Course[]
  hodDetails          HodDetails?
  noDues              NoDue[]
  students            Student[]         @relation("StudentDepartment")
  preferredByStudents Student[]         @relation("StudentPreferredDepartment")

  @@unique([name, program])
  @@unique([department_code, program])
  @@map("departments")
}

model AdmissionWindow {
  id          Int      @id @default(autoincrement())
  program     Program
  startDate   DateTime @map("start_date")
  endDate     DateTime @map("end_date")
  isOpen      Boolean  @default(true) @map("is_open")
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  batchId     Int      @unique @map("batch_id")
  batch       Batch    @relation(fields: [batchId], references: [id], onDelete: Cascade)

  @@map("admission_windows")
}

model DeviceToken {
  id         Int      @id @default(autoincrement())
  token      String   @unique
  deviceType String?  @map("device_type")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  
  studentId  Int?     @map("student_id")
  student    Student? @relation("StudentDeviceTokens", fields: [studentId], references: [id])
  
  userId     Int?     @map("user_id")
  user       User?    @relation("UserDeviceTokens", fields: [userId], references: [id])

  @@map("device_tokens")
}

model HodDetails {
  id           Int        @id @default(autoincrement()) @map("hod_id")
  userId       Int        @unique @map("user_id")
  departmentId Int        @unique @map("department_id")
  department   Department @relation(fields: [departmentId], references: [id])
  user         User       @relation(fields: [userId], references: [id])

  @@map("hod_details")
}

model AdvisorDetails {
  id     Int  @id @default(autoincrement()) @map("advisor_id")
  userId Int  @unique @map("user_id")
  user   User @relation(fields: [userId], references: [id])

  @@map("advisor_details")
}

model PrincipalDetails {
  id     Int  @id @default(autoincrement()) @map("principal_id")
  userId Int  @unique @map("user_id")
  user   User @relation(fields: [userId], references: [id])

  @@map("principal_details")
}

model NoDueRequest {
  id               Int                   @id @default(autoincrement()) @map("request_id")
  studentId        Int                   @map("student_id")
  reason           String
  requestDate      DateTime              @default(now()) @map("request_date")
  status           RequestStatus         @default(pending)
  workflowStatus   RequestWorkflowStatus @default(submitted) @map("workflow_status")
  updatedAt        DateTime              @updatedAt @map("updated_at")
  isArchived       Boolean               @default(false) @map("is_archived")
  targetSemester   Int                   @default(1) @map("target_semester")
  courseSelections CourseSelection[]
  student          Student               @relation(fields: [studentId], references: [id])
  noDues           NoDue[]

  @@map("no_due_requests")
}

model ServiceDepartment {
  id             Int                @id @default(autoincrement()) @map("service_dept_id")
  name           String
  code           String
  createdAt      DateTime           @default(now()) @map("created_at")
  updatedAt      DateTime           @updatedAt @map("updated_at")
  assignedUserId Int?               @map("assigned_user_id")
  program        Program            @default(BTECH)
  dueConfigs     DueConfiguration[]
  noDues         NoDue[]
  assignedUser   User?              @relation("AssignedDueTypes", fields: [assignedUserId], references: [id])

  @@unique([name, program])
  @@unique([code, program])
  @@map("service_departments")
}

model DueConfiguration {
  id                  Int                @id @default(autoincrement()) @map("config_id")
  semester            Int
  serviceDepartmentId Int?               @map("service_department_id")
  name                String?
  dueDate             DateTime?          @map("due_date")
  isActive            Boolean            @default(true) @map("is_active")
  program             Program            @default(BTECH)
  serviceDepartment   ServiceDepartment? @relation(fields: [serviceDepartmentId], references: [id])

  @@unique([semester, program, serviceDepartmentId, name])
  @@map("due_configurations")
}

model NoDue {
  id                  Int                @id @default(autoincrement()) @map("no_due_id")
  requestId           Int                @map("request_id")
  departmentId        Int?               @map("department_id")
  status              NoDueStatus        @default(pending)
  comments            String?
  updatedAt           DateTime           @updatedAt @map("updated_at")
  serviceDepartmentId Int?               @map("service_department_id")
  courseId            Int?               @map("course_id")
  approvals           NoDueApproval[]
  course              Course?            @relation(fields: [courseId], references: [id])
  department          Department?        @relation(fields: [departmentId], references: [id])
  request             NoDueRequest       @relation(fields: [requestId], references: [id])
  serviceDepartment   ServiceDepartment? @relation(fields: [serviceDepartmentId], references: [id])

  @@map("no_dues")
}

model NoDueApproval {
  id           Int            @id @default(autoincrement()) @map("approval_id")
  noDueId      Int            @map("no_due_id")
  approverId   Int            @map("approver_id")
  approvalDate DateTime       @default(now()) @map("approval_date")
  status       ApprovalStatus @default(pending)
  comments     String?
  approver     User           @relation(fields: [approverId], references: [id])
  noDue        NoDue          @relation(fields: [noDueId], references: [id])

  @@map("no_due_approvals")
}

model Course {
  id           Int               @id @default(autoincrement()) @map("course_id")
  name         String
  code         String            @unique
  type         CourseType
  departmentId Int               @map("department_id")
  semester     Int
  isActive     Boolean           @default(true) @map("is_active")
  category     CourseCategory?   @default(CORE)
  staffId      Int               @map("staff_id")
  selections   CourseSelection[]
  department   Department        @relation(fields: [departmentId], references: [id])
  staff        User              @relation(fields: [staffId], references: [id])
  noDues       NoDue[]

  @@map("courses")
}

model CourseSelection {
  id        Int          @id @default(autoincrement()) @map("selection_id")
  requestId Int          @map("request_id")
  courseId  Int          @map("course_id")
  course    Course       @relation(fields: [courseId], references: [id])
  request   NoDueRequest @relation(fields: [requestId], references: [id])

  @@unique([requestId, courseId])
  @@map("course_selections")
}

model FeeStructure {
  id          Int        @id @default(autoincrement()) @map("fee_structure_id")
  name        String     @unique @map("fee_name")
  description String?
  amount      Decimal
  dueDate     DateTime?  @map("due_date") @db.Date
  fineEnabled Boolean    @default(false) @map("fine_enabled")
  invoices    Invoice[]
  fineSlabs   FineSlab[]

  @@map("fee_structures")
}

model FineSlab {
  id             Int          @id @default(autoincrement())
  feeStructureId Int          @map("fee_structure_id")
  startDay       Int          @map("start_day")
  endDay         Int?         @map("end_day")
  amountPerDay   Decimal      @map("amount_per_day")
  feeStructure   FeeStructure @relation(fields: [feeStructureId], references: [id], onDelete: Cascade)

  @@map("fine_slabs")
}

model FeeDetails {
  id                 Int               @id @default(autoincrement()) @map("fee_id")
  studentId          Int               @map("student_id")
  feeType            String            @map("fee_type")
  amount             Decimal
  dueDate            DateTime          @map("due_date") @db.Date
  createdAt          DateTime          @default(now()) @map("created_at")
  semester           Int?              @map("semester")
  archived           Boolean?          @default(false)
  busFeeAssignmentId Int?              @map("bus_fee_assignment_id")
  busFeeAssignment   BusFeeAssignment? @relation(fields: [busFeeAssignmentId], references: [id])
  student            Student           @relation(fields: [studentId], references: [id], onDelete: Cascade)
  invoices           Invoice[]

  @@map("fee_details")
}

model Invoice {
  id             Int           @id @default(autoincrement()) @map("invoice_id")
  studentId      Int           @map("student_id")
  feeId          Int           @map("fee_id")
  amount         Decimal
  baseAmount     Decimal?      @map("base_amount")
  fineAmount     Decimal       @default(0) @map("fine_amount")
  issueDate      DateTime      @default(now()) @map("issue_date") @db.Date
  dueDate        DateTime      @map("due_date") @db.Date
  status         InvoiceStatus @default(unpaid)
  createdAt      DateTime      @default(now()) @map("created_at")
  feeStructureId Int?
  semester       Int?          @map("semester")
  FeeStructure   FeeStructure? @relation(fields: [feeStructureId], references: [id])
  fee            FeeDetails    @relation(fields: [feeId], references: [id])
  student        Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  payments       Payment[]

  @@map("invoices")
}

model Payment {
  id            Int           @id @default(autoincrement()) @map("payment_id")
  invoiceId     Int           @map("invoice_id")
  amount        Decimal
  paymentDate   DateTime      @default(now()) @map("payment_date")
  paymentMethod String        @map("payment_method")
  transactionId String        @unique @map("transaction_id")
  status        PaymentStatus @default(pending)
  invoice       Invoice       @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model Notification {
  id          Int                    @id @default(autoincrement()) @map("notification_id")
  senderId    Int                    @map("sender_id")
  receiverId  Int?                   @map("receiver_id")
  description String                 @map("message")
  status      NotificationStatus     @default(draft)
  createdAt   DateTime               @default(now()) @map("created_at")
  expiryDate  DateTime?              @map("expiry_date")
  priority    NotificationPriority   @default(NORMAL)
  targetType  NotificationTargetType @default(ALL)
  targetValue String?
  title       String                 @default("Notification")
  updatedAt   DateTime               @default(now()) @updatedAt @map("updated_at")
  receiver    User?                  @relation("ReceivedNotifications", fields: [receiverId], references: [id])
  sender      User                   @relation("SentNotifications", fields: [senderId], references: [id])

  @@map("notifications")
}

model AuditLog {
  id         Int      @id @default(autoincrement()) @map("log_id")
  userId     Int?     @map("user_id")
  action     String
  module     String   @default("general") // fee, admission, due, due_settings
  entityType String?  @map("entity_type") // FeeStructure, Invoice, Student, NoDueRequest, etc.
  entityId   String?  @map("entity_id")
  details    Json?
  ipAddress  String?  @map("ip_address")
  userAgent  String?  @map("user_agent")
  timestamp  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])

  @@index([module])
  @@index([userId])
  @@index([timestamp])
  @@map("audit_log")
}

model Setting {
  id      Int     @id @default(autoincrement()) @map("setting_id")
  key     String  @unique
  value   String?
  enabled Boolean @default(false)

  @@map("settings")
}

model Certificate {
  id                Int                       @id @default(autoincrement()) @map("certificate_id")
  studentId         Int                       @map("student_id")
  type              CertificateType
  reason            String
  status            CertificateStatus         @default(PENDING)
  requestedAt       DateTime                  @default(now()) @map("requested_at")
  approvedAt        DateTime?                 @map("approved_at")
  rejectedAt        DateTime?                 @map("rejected_at")
  rejectionReason   String?
  certificateUrl    String?                   @map("certificate_url")
  advisorActionAt   DateTime?                 @map("advisor_action_at")
  advisorId         Int?                      @map("advisor_id")
  advisorRemarks    String?                   @map("advisor_remarks")
  hodActionAt       DateTime?                 @map("hod_action_at")
  hodId             Int?                      @map("hod_id")
  hodRemarks        String?                   @map("hod_remarks")
  officeActionAt    DateTime?                 @map("office_action_at")
  officeId          Int?                      @map("office_id")
  officeRemarks     String?                   @map("office_remarks")
  principalActionAt DateTime?                 @map("principal_action_at")
  principalId       Int?                      @map("principal_id")
  principalRemarks  String?                   @map("principal_remarks")
  updatedAt         DateTime                  @updatedAt @map("updated_at")
  workflowStatus    CertificateWorkflowStatus @default(SUBMITTED) @map("workflow_status")
  approvals         CertificateApproval[]
  student           Student                   @relation(fields: [studentId], references: [id])

  @@map("certificates")
}

model CertificateApproval {
  id            Int         @id @default(autoincrement()) @map("approval_id")
  certificateId Int         @map("certificate_id")
  approverId    Int         @map("approver_id")
  role          String
  action        String
  remarks       String?
  createdAt     DateTime    @default(now()) @map("created_at")
  certificate   Certificate @relation(fields: [certificateId], references: [id])

  @@map("certificate_approvals")
}

model Bus {
  id             Int          @id @default(autoincrement())
  busNumber      String       @unique
  busName        String?
  routeName      String?
  totalSeats     Int
  driverName     String
  driverPhone    String
  isActive       Boolean      @default(true)
  registrationNo String?
  stops          BusStop[]
  busRequests    BusRequest[]
  students       Student[]
}

model BusStop {
  id          Int          @id @default(autoincrement())
  busId       Int
  stopName    String
  feeAmount   Int
  bus         Bus          @relation(fields: [busId], references: [id], onDelete: Cascade)
  busRequests BusRequest[]
  students    Student[]

  @@unique([busId, stopName])
}

model BusRequest {
  id        Int           @id @default(autoincrement())
  studentId Int           @map("student_id")
  busId     Int           @map("bus_id")
  busStopId Int           @map("bus_stop_id")
  status    RequestStatus @default(pending)
  createdAt DateTime      @default(now()) @map("created_at")
  bus       Bus           @relation(fields: [busId], references: [id])
  busStop   BusStop       @relation(fields: [busStopId], references: [id])
  student   Student       @relation(fields: [studentId], references: [id])

  @@map("bus_requests")
}

model Batch {
  id                Int                @id @default(autoincrement()) @map("batch_id")
  name              String             @unique
  startYear         Int                @map("start_year")
  endYear           Int                @map("end_year")
  status            BatchStatus        @default(UPCOMING)
  createdAt         DateTime           @default(now()) @map("created_at")
  admissionWindow   AdmissionWindow?
  batchDepartments  BatchDepartment[]
  busFeeAssignments BusFeeAssignment[]

  @@map("batches")
}

model BatchDepartment {
  id           Int        @id @default(autoincrement()) @map("batch_dept_id")
  batchId      Int        @map("batch_id")
  departmentId Int        @map("department_id")
  batch        Batch      @relation(fields: [batchId], references: [id])
  department   Department @relation(fields: [departmentId], references: [id])
  classes      Class[]

  @@unique([batchId, departmentId])
  @@map("batch_departments")
}

model Class {
  id                Int             @id @default(autoincrement()) @map("class_id")
  name              String
  batchDepartmentId Int             @map("batch_dept_id")
  advisorId         Int?            @unique @map("advisor_id")
  advisor           User?           @relation("ClassAdvisor", fields: [advisorId], references: [id])
  batchDepartment   BatchDepartment @relation(fields: [batchDepartmentId], references: [id])
  students          Student[]

  @@unique([batchDepartmentId, name])
  @@map("classes")
}

model Hostel {
  id          Int             @id @default(autoincrement()) @map("hostel_id")
  name        String          @unique
  wardenName  String          @map("warden_name")
  wardenPhone String          @map("warden_phone")
  monthlyRent Decimal         @default(0) @map("monthly_rent")
  createdAt   DateTime        @default(now()) @map("created_at")
  updatedAt   DateTime        @updatedAt @map("updated_at")
  history     HostelHistory[]
  students    Student[]

  @@map("hostels")
}

model HostelHistory {
  id          Int       @id @default(autoincrement())
  studentId   Int       @map("student_id")
  hostelId    Int       @map("hostel_id")
  checkInDate DateTime  @default(now()) @map("check_in_date")
  vacatedDate DateTime? @map("vacated_date")
  status      String    @default("ACTIVE")
  hostel      Hostel    @relation(fields: [hostelId], references: [id])
  student     Student   @relation(fields: [studentId], references: [id])

  @@map("hostel_history")
}

model BusFeeAssignment {
  id         Int          @id @default(autoincrement()) @map("assignment_id")
  batchId    Int          @map("batch_id")
  semester   Int
  dueDate    DateTime     @map("due_date")
  createdAt  DateTime     @default(now()) @map("created_at")
  batch      Batch        @relation(fields: [batchId], references: [id])
  feeDetails FeeDetails[]

  @@unique([batchId, semester])
  @@map("bus_fee_assignments")
}

model PromotionHistory {
  id                 Int      @id @default(autoincrement()) @map("promotion_id")
  promotedAt         DateTime @default(now()) @map("promoted_at")
  semesterType       String   @map("semester_type")
  affectedStudentIds Int[]    @map("affected_student_ids")
  details            Json
  adminId            Int?     @map("admin_id")

  @@map("promotion_history")
}

model EmailQueue {
  id          Int         @id @default(autoincrement())
  to          String
  subject     String
  content     String
  description String?
  status      EmailStatus @default(PENDING)
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  @@map("email_queue")
}

enum BatchStatus {
  UPCOMING
  ACTIVE
  GRADUATED
}

enum DepartmentStatus {
  ACTIVE
  INACTIVE
}

enum CertificateType {
  BONAFIDE
  COURSE_COMPLETION
  TRANSFER
  CHARACTER
  OTHER
}

enum CertificateStatus {
  PENDING
  APPROVED
  REJECTED
  GENERATED
}

enum CertificateWorkflowStatus {
  SUBMITTED
  WITH_ADVISOR
  WITH_HOD
  WITH_OFFICE
  WITH_PRINCIPAL
  COMPLETED
  REJECTED
}

enum UserStatus {
  active
  inactive
  suspended
}

enum Gender {
  male
  female
  other
}

enum NoDueStatus {
  pending
  cleared
  due_found
}

enum ApprovalStatus {
  pending
  approved
  rejected
}

enum RequestStatus {
